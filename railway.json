{
    "build": {
      "builder": "nixpacks",
      "buildCommand": "pip install --upgrade pip && pip install -r requirements.txt"
    },
    "deploy": {
      "startCommand": "python manage.py migrate && gunicorn video_streaming.wsgi:application --bind 0.0.0.0:$PORT",
      "healthcheckPath": "/",
      "healthcheckTimeout": 90,
      "restartPolicyType": "on_failure"
    }
  }